{
  "name": "[DEVELOPMENT] Minimal Consent",
  "short_name": "Consent and Cookie Banners -- a thing of the past.",
  "version": "0.0.1",
  "description": "[DEVELOPMENT] Minimal Consent automatically ensures that only functional cookies are dropped and thereby blocks annoying cookie banners.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "./background.bundle.js"
    ]
  },
  "icons": {
    "16": "./images/Icon_16x16_dev.png",
    "32": "./images/Icon_32x32_dev.png",
    "48": "./images/Icon_48x48_dev.png",
    "128": "./images/Icon_128x128_dev.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./contentscript.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "./images/Icon_16x16_dev.png",
      "32": "./images/Icon_32x32_dev.png",
      "48": "./images/Icon_48x48_dev.png",
      "128": "./images/Icon_128x128_dev.png"
    },
    "default_title": "[DEVELOPMENT] Minimal Consent"
  }
}


