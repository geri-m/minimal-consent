{
  "name": "Minimal Consent",
  "short_name": "Consent and Cookie Banners -- a thing of the past.",
  "version": "0.0.1",
  "description": "Minimal Consent automatically ensures that only functional cookies are dropped and thereby blocks annoying cookie banners.",
  "manifest_version": 2,
  "icons": {
    "16": "./images/Icon_16x16.png",
    "32": "./images/Icon_32x32.png",
    "48": "./images/Icon_48x48.png",
    "128": "./images/Icon_128x128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./contentscript.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "./images/Icon_16x16.png",
      "32": "./images/Icon_32x32.png",
      "48": "./images/Icon_48x48.png",
      "128": "./images/Icon_128x128.png"
    },
    "default_title": "Minimal Consent"
  }
}


